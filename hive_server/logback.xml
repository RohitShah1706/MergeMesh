<configuration>
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>logs/oplog-hive.log</file>
        <append>true</append>
        <encoder>
            <pattern>%msg%n</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="FILE"/>
    </root>
</configuration>
